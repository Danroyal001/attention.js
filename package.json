{
  "name": "attention",
  "version": "1.0.0-beta",
  "description": "A vanilla js library for creating stylish alerts, prompts and confirms.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "watch:style": "node-sass styles/index.scss dist/attention.css -w  --output-style=compressed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janmarkuslanger/attention.js.git"
  },
  "keywords": [
    "notification",
    "prompt",
    "confirm",
    "alert"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/attention.esm.js",
  "author": "Jan-Markus Langer",
  "license": "MIT",
  "size-limit": [
    {
      "path": "dist/attention.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/attention.esm.js",
      "limit": "10 KB"
    }
  ],
  "bugs": {
    "url": "https://github.com/janmarkuslanger/attention.js/issues"
  },
  "homepage": "https://github.com/janmarkuslanger/attention.js#readme",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.12.0",
    "husky": "^6.0.0",
    "size-limit": "^4.12.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "node-sass": "^6.0.0"
  }
}
